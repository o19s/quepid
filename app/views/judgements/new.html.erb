<h1>New Judgement</h1>

<%= render 'form', judgement: @judgement %>

<br>

<%
  @last_judgement_id = session["last_judgement_id"]
  if @last_judgement_id != nil
    begin
      @last_judgement = Judgement.find(@last_judgement_id)
    rescue
      @last_judgement = nil
    end
  end
%>
<% if @last_judgement != nil %>
  <%= button_to 'Back', book_judgement_url(@book, @last_judgement), method: :get %>
  <br>
<% end %>
<%= button_to 'Skip', book_judge_path(@book), method: :get %>
