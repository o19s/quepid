<p></p>
<h2>Judgements for Book <%= @book.name %></h2>

<%= render 'judgements/moar_judgements_needed', book: @book %>

<%= button_to "Back to Book #{@book.name}", @book, method: :get %>



<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th>Query</th>
      <th>Doc ID</th>
      <th>Document fields</th>
      <th>Rating</th>

    </tr>
    </thead>

    <tbody>
    <% @judgements.each do |judgement| %>

        <tr>
          <td>
            <%= link_to judgement.id, edit_book_query_doc_pair_judgement_path(judgement.query_doc_pair.book, judgement.query_doc_pair, judgement) %>
          </td>

          <td>
            <%= judgement.query_doc_pair.query_text %>
          </td>

          <td>
            <%= judgement.query_doc_pair.doc_id %>
          </td>

          <td>
            <%= truncate(judgement.query_doc_pair.document_fields, length: 100) %>
          </td>

          <td>
            <%= judgement.rating %>
          </td>
        </tr>

    <% end %>
    </tbody>
  </table>
  <br>
