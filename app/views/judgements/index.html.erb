<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1>Judgements for <i class="bi bi-book"></i> <%= book_title @book %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= link_to 'Bulk Judge', book_judge_bulk_path(@book), class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>

<%= render 'books/tabs', book: @book %>

<div class="card h-100">
  <div class="card-header">
    <%= form_tag(book_judgements_path(@book), { method: :get }) do %>
      <%= hidden_field_tag :filtered, true %>
      <div class="mb-0 d-flex flex-wrap align-items-center gap-3 fs-6">

        <!-- Search input with fixed width -->
        <div class="input-group max-w-340">
          <%= text_field_tag :q, params[:q],
              class: 'form-control form-control-sm',
              placeholder: 'Filter by query, doc id, or explanation',
              id: 'q'
          %>
          <%= button_tag type: 'submit', class: 'btn btn-sm btn-outline-secondary' do %>
            <i class="bi bi-search-heart"></i>
          <% end %>
        </div>

        <!-- Judge dropdown -->
        <%= select_tag :user_id,
            options_for_select(
              [['All Judges', '']] + @book.judges.map { |j| [j.fullname, j.id] },
              params[:user_id]
            ),
            class: 'form-select form-select-sm',
            style: 'width: auto; min-width: 140px;',
            id: 'user_id',
            onchange: 'this.form.submit()'
        %>

        <!-- Checkboxes -->
        <div class="d-flex align-items-center gap-3">
          <div class="form-check form-check-inline mb-0">
            <%= check_box_tag :compact,
                true,
                @compact,
                class: 'form-check-input',
                id: 'compact',
                onchange: 'this.form.submit()'
            %>
            <label class="form-check-label" for="compact">Compact</label>
          </div>

          <div class="form-check form-check-inline mb-0">
            <%= check_box_tag :unrateable,
                true,
                params[:unrateable].present?,
                class: 'form-check-input',
                id: 'unrateable',
                onchange: 'this.form.submit()'
            %>
            <label class="form-check-label" for="unrateable">Unrateable</label>
          </div>

          <div class="form-check form-check-inline mb-0">
            <%= check_box_tag :judge_later,
                true,
                params[:judge_later].present?,
                class: 'form-check-input',
                id: 'judge_later',
                onchange: 'this.form.submit()'
            %>
            <label class="form-check-label" for="judge_later">Later</label>
          </div>
        </div>

      </div>
    <% end %>
  </div>
  
  <div class="card-body">
    <table class="table table-hover table-sm">
      <thead>
        <tr>
          <th>Query</th>
          <th>Query Doc ID</th>   
          <th>Doc ID</th>
          <th>ID</th>
          <% unless @compact %>
            <th>Document fields</th>
          <% end %>
          <th>Rating</th>
          <% unless @compact %>
            <th>Unrateable</th>
            <th>Judge Later</th>
          <% end %>
          <th>Rater</th>
          <% unless @compact %>
            <th>Explanation</th>
            <th>Created At</th>
            <th>Updated At</th>      
          <% end %>
    
        </tr>
      </thead>
  
      <tbody>
      <%
      last_query_doc_pair_id = nil
      table_row_style = nil #cycle('', 'table-primary')
      %>
      <% @judgements.each do |judgement| %>
          <% 
          if last_query_doc_pair_id != judgement.query_doc_pair_id
            table_row_style = cycle('table-active', '')
            last_query_doc_pair_id = judgement.query_doc_pair_id
          end
          %>
          <tr class="<%= table_row_style %>">
            <td>
              <%= judgement.query_doc_pair.query_text %>
            </td>            
            <td>
              <%= judgement.query_doc_pair.id %> 
            </td>
            <td>
              <%= judgement.query_doc_pair.doc_id %>
            </td>
            <td>
              <%= link_to judgement.id, edit_book_query_doc_pair_judgement_path(@book, judgement.query_doc_pair, judgement) %>
            </td>
            <% unless @compact %>
            <td>            
              <%= truncate(judgement.query_doc_pair.document_fields.to_json, length: 150) %>
            </td>
            <% end %> 
            <td>
              <%= judgement.rating %>
            </td>
            <% unless @compact %>
              <td>
                <%= judgement.unrateable? ? 'X' : '' %>
              </td>
              <td>
                <%= judgement.judge_later? ? 'X' : '' %>
              </td>
            <% end %>
            <td>
              <%= display_judge_name(judgement.user) %>
            </td>
            <% unless @compact %>
              <td>
                <%= judgement.explanation %>
              </td>
              <td>
                <%= judgement.created_at %>
              </td>
              <td>
                <%= judgement.updated_at %>
              </td>  
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer d-flex justify-content-center">
    <%== @pagy.series_nav(:bootstrap) %>
  </div>
</div>
