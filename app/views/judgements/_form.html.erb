      } else if (keyCode == 104 || keyCode == 72) {
          keyDown("h");
      } else if (keyCode == 106 || keyCode == 74) {
          keyDown("j");
      } else if (keyCode == 107 || keyCode == 75) {
          keyDown("k");
      } else if (keyCode == 108 || keyCode == 76) {
          keyDown("l");
      } else if (keyCode == 59 || keyCode == 186) {
          keyDown("sc");
      }
  });
</script>


