    <h5 class="card-header text-truncate">
      <% if kase.nightly? %>
        <i class="bi bi-repeat float-end"></i>
      <% end %>      
      <%= link_to_core_case case_title(kase), kase, kase.last_try_number %>

    </h5>
    
    <div class="card-body">
      <turbo-frame id="case_frame_<%= kase.id %>" src="<%= home_case_prophet_path(kase) %>" loading="lazy">
        <h5 class="card-title placeholder-glow"></h5>
        <p class="card-text placeholder-glow">
          <span class="placeholder col-11"></span>
        </p>
        <p class="card-text placeholder-glow">
          <span class="placeholder col-11"></span>
        </p>
        <p class="card-text placeholder-glow">
