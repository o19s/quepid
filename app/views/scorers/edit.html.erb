<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1>Edit Scorer: <%= @scorer.name %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <%= button_to "Delete", scorer_path(@scorer), method: :delete, class: 'btn btn-sm btn-outline-danger', onclick: "return confirm('Are you sure you want to delete this Scorer?');" %>
    </div>
    <%= link_to "Back", scorers2_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>
</div>

<%= render 'form', scorer: @scorer %>
