
<%= form_for([@book, query_doc_pair]) do |form| %>
  <% if query_doc_pair.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(query_doc_pair.errors.count, "error") %> prohibited this query_doc_pair from being saved:</h2>

      <ul>
        <% query_doc_pair.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :query_text %>
    <%= form.text_field :query_text %>
  </div>

  <div class="field">
    <%= form.label :position %>
    <%= form.text_field :position %>
  </div>

  <div class="field">
    <%= form.label :doc_id, "Doc ID" %>
    <%= form.text_field :doc_id %>
  </div>

  <div class="field">
    <%= form.label :document_fields %> <small>Either text or JSON</small><br/>
    <%= form.text_area :document_fields, size: "80x20" %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
