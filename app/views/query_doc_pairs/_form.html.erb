<%= form_with(model: [@book, query_doc_pair]) do |form| %>
  <div class="card">
    <div class="card-body">
      <% if query_doc_pair.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(query_doc_pair.errors.count, "error") %> prohibited this Query Doc Pair from being saved:</h2>

          <ul>
            <% query_doc_pair.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :query_text, class: 'form-label' %>
        <%= form.text_field :query_text, class: 'form-control' %>
        <div class="form-text">The search query text.</div>
      </div>

      <div class="mb-3">
        <%= form.label :doc_id, "Document ID", class: 'form-label' %>
        <%= form.text_field :doc_id, class: 'form-control' %>
        <div class="form-text">Unique identifier for the document.</div>
      </div>

      <div class="mb-3">
        <%= form.label :position, class: 'form-label' %>
        <%= form.number_field :position, class: 'form-control' %>
        <div class="form-text">Position/rank of this document in the result set.</div>
      </div>

      <div class="mb-3">
        <%= form.label :information_need, class: 'form-label' %>
        <%= form.text_field :information_need, class: 'form-control' %>
        <div class="form-text">Description of the user's information need for this query.</div>
      </div>

      <div class="mb-3">
        <%= form.label :notes, class: 'form-label' %>
        <%= form.text_area :notes, rows: 4, class: 'form-control' %>
        <div class="form-text">Additional notes about this query-document pair.</div>
      </div>

      <div class="mb-3">
        <%= form.label :options, class: 'form-label' %>
        <div class="form-text">Additional configuration options as JSON.</div>
        <%= form.text_area :options, value: format_json(query_doc_pair.options), data: { codemirror_mode: "application/json", codemirror_line_numbers: true, codemirror_height: 100 } %>
      </div>

      <div class="mb-3">
        <%= form.label :document_fields, class: 'form-label' %>
        <div class="form-text">Document fields as JSON object.</div>
        <%= form.text_area :document_fields, value: format_json(query_doc_pair.document_fields), data: { codemirror_mode: "application/json", codemirror_line_numbers: true, codemirror_height: 200 } %>
      </div>

      <div class="actions">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
