<h2>Users Listing</h2>

<table class="table table-striped table-hover table-sm table-light">
  <thead>
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Signed Up</th>
      <th>Marketing</th>
      <th>Number of Logins</th>
      <th>Administrator?</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td>
          <%= user.agreed_time %>
          <% if user.agreed_time %>
            (<%= time_ago_in_words user.agreed_time %> ago)
          <% end %>
        </td>
        <td><%= user.email_marketing %></td>
        <td><%= user.num_logins %></td>
        <td><%= user.administrator? %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
