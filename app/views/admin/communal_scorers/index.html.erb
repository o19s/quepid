<h2>Quepid Communal Scorers Listing</h2>

<%= link_to 'New Communal Scorer', new_admin_communal_scorer_path %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Code</th>
      <th>Scale</th>
      <th>Show Scale Labels?</th>
      <th>Scale with Labels</th>
      <th>Updated At</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @scorers.each do |scorer| %>
      <tr class='scorer'>
        <td><%= scorer.id %></td>
        <td><%= scorer.name %></td>
        <td class='code'>
          <div
            id="code-<%= scorer.id %>"
            data-readonly='true'
            data-code="<%= scorer.code %>"
          ></div>
        </td>
        <td><%= scorer.scale_list %></td>
        <td><%= scorer.show_scale_labels? %></td>
        <td><%= scorer.scale_with_labels %></td>
        <td>
          <%= scorer.updated_at %>
          <% if scorer.updated_at %>
            (<%= time_ago_in_words scorer.updated_at %> ago)
          <% end %>
        </td>
        <td><%= link_to 'Show', admin_communal_scorer_path(scorer) %></td>
        <td><%= link_to 'Edit', edit_admin_communal_scorer_path(scorer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
