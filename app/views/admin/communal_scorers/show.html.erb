<h1>Show Scorer</h1>

<%= link_to 'Edit', edit_admin_communal_scorer_path(@scorer) %> |
<%= link_to 'Destroy', admin_communal_scorer_path(@scorer), method: :delete, data: { confirm: 'Are you sure you want to delete this communal scorer?' } %> |
<%= link_to 'Back', admin_communal_scorers_path %>

<div class='scorer container'>
  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Name:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.name %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Code:
    </strong>

    <div class="col-sm-10 code">
      <textarea id="codearea"><%= @scorer.code %></textarea>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Scale:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.scale_list %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Show scale labels?
    </strong>

    <div class="col-sm-10">
      <%= @scorer.show_scale_labels %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Scale with labels:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.scale_with_labels %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Updated At:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.updated_at %>
    </div>
  </div>
</div>

<script>
  const codemirrorEditor = CodeMirror.fromTextArea(document.getElementById('codearea'), {
    lineNumbers: true,
    mode: "javascript",
    readOnly: true
  });
</script>
