<h1>Show Scorer</h1>

<%= link_to 'Edit', edit_admin_communal_scorer_path(@scorer) %> |
<%= link_to 'Back', admin_communal_scorers_path %>

<div class='scorer container'>
  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Name:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.name %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Code:
    </strong>

    <div class="col-sm-10 code">
      <div
        id="code-<%= @scorer.id %>"
        data-readonly='true'
        data-code="<%= @scorer.code %>"
      ></div>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Scale:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.scale %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Use a manual max score?:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.manual_max_score %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Manual max score value:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.manual_max_score_value %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Show scale labels?
    </strong>

    <div class="col-sm-10">
      <%= @scorer.show_scale_labels %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Scale with labels:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.scale_with_labels %>
    </div>
  </div>

  <div class="row element-attribute">
    <strong class='col-sm-2 control-label'>
      Updated At:
    </strong>

    <div class="col-sm-10">
      <%= @scorer.updated_at %>
    </div>
  </div>
</div>
