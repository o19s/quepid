<%= turbo_stream.replace "notification-case-#{acase.id}" do %>
  <span id="notification-case-<%= acase.id %>">
    <% unless query.nil? %>
    Query: <code><%=query.query_text%></code>
    <% end %>
    <% if counter > 0 %>
      <div class="alert alert-warning" role="alert" >      
        Iterations Remaining: <code><%= query_count - counter %></code>. 
      <br/>     
      </div>
    <% else %>
      <div class="alert alert-info" role="alert">
        Query Runner Job has completed.
      </div>
    <% end %>
  </span>
<% end %>
