<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>Quepid -- Relevant Search Solved</title>
<meta name="description" content="Tired of irrelevant search results? Use Quepid products & services to help improve the quality and relevancy of your search results.">
<meta name="viewport" content="width=device-width">

<%= stylesheet_link_tag 'application', media: 'all' %>

<%= csrf_meta_tags %>

</head>
<body class='admin'>
  <%= render 'cookies_eu/consent_banner', link: '/cookies', target: '_blank' unless Rails.application.config.cookies_url.blank? %>

  <div class="main-container">
    <header class="navbar-inverse navbar-secondary clearfix">
      <div class="container container-home">
        <%= render 'layouts/logo' %>

        <div class="navbar-right navbar-right-home-user">
          <p class="navbar-text">Welcome, <%= current_user.email %></p>

          <ul class="nav navbar-nav">
            <li><a href="/logout"><span class="glyphicon glyphicon-left glyphicon-eject"></span> Logout</a></li>
          </ul>
        </div>
      </div>
    </header>

    <div id='flash'>
      <%= flash_messages -%>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </div>

  <%= render 'layouts/footer' %>

  <%= javascript_include_tag 'admin' %>

  <%= render 'layouts/common_js' %>

</body>
</html>
