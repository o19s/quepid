{
  "name": "quepid",
  "repository": {
    "type": "git",
    "url": "https://github.com/o19s/quepid.git"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.10.3",
    "cal-heatmap": "^4.2.4",
    "clipboard": "^2.0.11",
    "d3": "~7.9.0",
    "jquery": "^3.7.1",
    "local-time": "^3.0.0",
    "sortablejs": "^1.15.7",
    "vega": "^6.0.0",
    "vega-embed": "^7.1.0",
    "vega-lite": "^6.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "chokidar": "5.0.0",
    "esbuild": "^0.27.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "vitest": "^4.0.18"
  },
  "resolutions": {},
  "scripts": {
    "build:clean": "node build_clean.js",
    "build:jquery": "esbuild app/javascript/jquery_bundle.js --bundle --sourcemap --format=iife --platform=browser --outdir=app/assets/builds --public-path=/assets",
    "build:admin": "esbuild app/javascript/admin_users.js --bundle --sourcemap --format=iife --outdir=app/assets/builds --public-path=/assets",
    "build:analytics": "esbuild app/javascript/analytics.js --bundle --sourcemap --format=iife --outdir=app/assets/builds --public-path=/assets",
    "build:css": "node build_css.js",
    "build:css:watch": "node build_css.js --watch",
    "build": "npm run build:clean && npm run build:css && npm run build:jquery && npm run build:admin && npm run build:analytics",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ci": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check \"app/javascript/**/*.js\" \"spec/javascripts/**/*.js\" \"build_*.js\" \"vitest.config.js\" \"eslint.config.mjs\"",
    "format:fix": "prettier --write \"app/javascript/**/*.js\" \"spec/javascripts/**/*.js\" \"build_*.js\" \"vitest.config.js\" \"eslint.config.mjs\""
  }
}
