{
  "name": "quepid",
  "description": "Give your queries some love!",
  "stack": "heroku-24",
  "addons": [
    "jawsdb",
    "logdna"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "BUNDLE_WITHOUT": {
      "required": true
    },
    "FORCE_SSL": {
      "required": true
    },
    "INTERCOM_API_KEY": {
      "required": true
    },
    "INTERCOM_APP_ID": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "LOGDNA_KEY": {
      "required": true
    },
    "POSTMARK_API_TOKEN": {
      "required": true
    },
    "QUEPID_DOMAIN": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "TC_URL": {
      "required": true
    },
    "PRIVACY_URL": {
      "required": true
    },
    "COOKIES_URL": {
      "required": true
    },
    "EMAIL_MARKETING_MODE": {
      "required": true
    },
    "QUEPID_DEFAULT_SCORER": {
      "required": true
    },
    "EMAIL_PROVIDER": {
      "required": true
    },
    "EMAIL_SENDER": {
      "required": true
    },
    "GOOGLE_CLIENT_ID": {
      "required": false
    },
    "GOOGLE_CLIENT_SECRET": {
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-2x"
    },
    "worker": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },
  "scripts": {
  }
}
